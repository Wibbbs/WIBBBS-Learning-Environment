block variables
html
    head
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css')
        link(rel='stylesheet' href='/css/mystyles.css')
        script(src='https://code.jquery.com/jquery-1.12.4.js' integrity='sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU=', crossorigin='anonymous')
    body
        section(class='hero is-success')
            div(class='hero-head')
                div(class='container')
                    nav(class='navbar')
                        div(class='navbar-brand')
                            a(class='navbar-item' href='/')
                                img(src='/images/Wibbbs-logos_white_cropped.png' alt='Logo')
                        div(class='navbar-end')
                            if !user
                                div(class='navbar-item')
                                    a(href='/auth/login') Login
                            else
                                div(class='navbar-item')
                                    p #{user.username}
                                    a(href='/auth/logout') Logout                 
            div(class='hero-body')
                div(class='container has-text-black')
                    h1 WIBBBS Learning Environment
            div(class='hero-foot')
                nav(class='tabs is-boxed is-fullwidth')
                    div(class='container has-text-black')
                        ul
                            if user
                                li(id='hometab')
                                    a(href='/') Home
                                li(id='profiletab')
                                    a(href='/profile') Profile
                                li(id='weathertab')
                                    a(href='/weather') Weather
                                li(id='githubtab')
                                    a(href='/github') Github API
                                li(id='twitchtab')
                                    a(href='/twitch') Twitch API
    script(src='javascript/tabs.js')
block content
